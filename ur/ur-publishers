_bin="$( \
  dirname \
    "$( \
      command \
        -v \
	  "env")")"
_lib="$( \
  realpath \
    "${_bin}/../lib")"
_crash_bash="${_lib}/libcrash-bash/crash-bash"
_libevm="${_lib}/libevm/libevm"
_sourced \
  "${_crash_bash}" 2>/dev/null || \
  source \
    "${_crash_bash}"
_sourced \
  "${_libevm}"

# shellcheck disable=SC2034
_global_variables() {
  call_date=""
  up_address=""
  up_version=""
  _libevm_global_variables
  _libevm_app_global_variables
  cache_dir=""
  gnupg_home=""
  gnupg_private=""
  keys_update=""
  key_publish=""
  user_name=""
  key_fingerprint=""
  full_name=""
  target_command=""
  target_key=""
  target_value=""
  command_args=()
  color=""
  quiet=""
}

_requirements() {
  _check_cmd \
    'libevm-requirements' \
    'libevm'
  libevm-requirements
  _check_cmd \
    'evm-contract-call' \
    'evm-contracts-tools'
  _check_cmd \
    'evm-contract-deployment-networks' \
    'evm-contracts-tools'
  _check_cmd \
    'evm-gpg' \
    'evm-gnupg'
  _check_cmd \
    'evm-wallet'
  _check_cmd \
    'evm-openpgp-key-publish' \
    'evm-openpgp-keyserver'
  _check_cmd \
    'evm-openpgp-key-receive' \
    'evm-openpgp-keyserver'
}

_conf_dir_auto_detect() {
  local \
    _dir
  _dir="${HOME}/.config/ur/publishers"
  echo \
    "${_dir}"
}

_cache_dir_auto_detect() {
  local \
    _dir
  _dir="${HOME}/.cache/ur/publishers"
  echo \
    "${_dir}"
}

_contract_call_opts_setup() {
  _contract_call_opts+=(
    -n
      "${_target_network}"
    -N
      "${_wallet_name}"
    -k
      "${_api_key_path}"
    -A
      "${_abi}"
    -B
      "${_bytecode}"
    -C
      "${_compiler_output}"
  )
}

_publishers_update_call_opts_setup() {
  local \
    _contract_call_opts=()
  _contract_call_opts_setup
  _list_call_opts+=(
    "${_contract_call_opts[@]}"
    -t
      "static"
  )
  _info_call_opts+=(
    "${_contract_call_opts[@]}"
    -t
      "static"
  )
}

_publisher_list_call_opts_setup() {
  local \
    _contract_call_opts=()
  _contract_call_opts_setup
  _publish_call_opts+=(
    "${_contract_call_opts[@]}"
    -t
      "dynamic"
  )
  _check_call_opts+=(
    "${_contract_call_opts[@]}"
    -t
      "static"
  )
}

_work_dir_setup() {
  local \
    _msg=()
  _tmp_dir="${_cache_dir}"
  _msg=(
    "Setting up work directory"
    "'${_tmp_dir}'."
  )
  _msg_info \
    "${_msg[*]}"
  mkdir \
    -p \
    "${_tmp_dir}/gnupg"
  chmod \
    -R \
    700 \
    "${_tmp_dir}"
}

_publishers_new_get() {
  local \
    _publisher \
    _bound_lower \
    _bound_upper \
    _publishers_remote_total \
    _publishers_local_total \
    _publishers_new \
    _msg=()
  _publishers_remote_total="$(( \
    "$(evm-contract-call \
        "${_list_call_opts[@]}" \
        "${_up_address}" \
        "publisherNo")" - 1))"
  _msg=(
    "A total of '${_publishers_remote_total}'"
    "are listed on the repository."
  )
  _msg_info \
    "${_msg[*]}"
  _publishers_local_total="$( \
    wc \
      -l \
      "${_publishers_db}" | \
      awk \
        '{print $1}')" 
  _msg=(
    "Locally are listed"
    "'${_publishers_local_total}'"
    "publishers."
  )
  _msg_info \
    "${_msg[*]}"
  _publishers_new="$(( \
   _publishers_remote_total - \
   _publishers_local_total))"
  if (( 0 < "${_publishers_new}" )); then
    _msg=(
      "Getting info for new"
      "'${_publishers_new}' publishers."
    )
    _msg_info \
      "${_msg[*]}"
    _bound_lower="$(( \
      _publishers_local_total \
      + 1))"
    _bound_upper="$(( \
      _publishers_remote_total))"
    for _publisher \
      in $(seq "${_bound_lower}" \
               "${_bound_upper}"); do
      _msg=(
        "Retrieving publisher '${_publisher}'"
        "out of '${_bound_upper}'."
      )
      _msg_info \
        "${_msg[*]}"
      printf \
        '%s\n' \
        "$(evm-contract-call \
             "${_list_call_opts[@]}" \
             "${_up_address}" \
             "publisher" \
             "${_publisher}")" >> \
        "${_publishers_db}"
    done
  fi
}

_publishers_info_get() {
  local \
    _publisher \
    _publishers=() \
    _evm_openpgp_key_receive_opts=()
  if [[ "${quiet}" == "n" ]]; then
    _evm_openpgp_key_receive_opts+=(
      -v
    )
  fi
  _evm_openpgp_key_receive_opts+=(
    -H
      "${_gnupg_home}"
  )
  _publishers+=(
    $(cat \
        "${_publishers_db}")
  )
  for _publisher in "${_publishers[@]}"; do
    _msg=(
      "Retrieving information for"
      "publisher '${_publisher}'."
    )
    _msg_info \
      "${_msg[*]}"
    evm-openpgp-key-receive \
      "${_evm_openpgp_key_receive_opts[@]}" \
      "${_publisher}"
  done
}

_publishers_update() {
  local \
    _target_network="${1}" \
    _up_address="${2}" \
    _abi="${3}" \
    _bytecode="${4}" \
    _compiler_output="${5}" \
    _work_dir="${6}" \
    _gnupg_home="${7}" \
    _keys_update="${8}" \
    _msg=() \
    _publishers_db \
    _tmp_dir \
    _list_call_opts=() \
    _info_call_opts=()
  _publishers_update_call_opts_setup
  _msg=(
    "Updating publishers."
  )
  _msg_info \
    "${_msg[*]}"
  _work_dir_setup
  _publishers_db="${_work_dir}/publishers.db"
  if [[ ! -e "${_publishers_db}" ]]; then
    touch \
      "${_publishers_db}"
    chmod \
      600 \
      "${_publishers_db}"
  fi
  _publishers_new_get
  if [[ "${keys_update}" == "y" ]]; then
    _publishers_info_get
  fi
}

_publishers_list() {
  local \
    _work_dir="${1}" \
    _gnupg_home="${2}" \
    _target_address \
    _gpg_opts=() \
    _msg=()
  _msg=(
    "Showing publishers."
  )
  _msg_info \
    "${_msg[*]}"
  if (( 2 < "$#" )); then
    _target_address="${3}"
  fi
  if [[ "${_target_address}" != "" ]]; then
    _gpg_opts+=(
      --homedir
        "${_gnupg_home}"
      --list-keys
    )
    GNUPG_HOME="${_gnupg_home}" \
    gpg \
      "${_gpg_opts[@]}" \
      "${_target_address}"
  else
    _publishers_db="${_work_dir}/publishers.db"
    if [[ ! -e "${_publishers_db}" ]]; then
      _publishers_update \
        "${_target_network}" \
        "${_up_address}" \
        "${_up_abi}" \
        "${_up_bytecode}" \
        "${_up_compiler_output}" \
        "${_work_dir}" \
        "${_gnupg_home}" \
        "${_keys_update}"
    fi
    cat \
      "${_publishers_db}"
  fi
}

_keys_private_check() {
  local \
    _user_name="${1}" \
    _gpg_opts=() \
    _subkey_encryption \
    _msg=()
  if [[ "${_user_name}" == "" ]]; then
    _user_name="*"
  fi
  _keys_private="n"
  _gpg_opts=(
    --homedir
      "${_gnupg_private}"
    --list-secret-keys
    --with-colons
  )
  _subkey_encryption="$( \
    gpg \
      "${_gpg_opts[@]}" \
      "${_user_name}@${_target_address}" | \
      grep \
        "^ssb" | 
        head \
          -n \
            1 | \
          awk \
            -F \
              ":" \
              '{print $12}' || \
        true)"
  if [[ "${_subkey_encryption}" == "e" ]]; then
    _msg=(
      "Found encryption-capable private subkeys"
      "for address '${_target_address}' in"
      "GNUPG home '${_gnupg_private}'."
    )
    _keys_private="y"
  elif [[ "${_subkey_encryption}" == "" ]]; then
    _msg=(
      "There are no encryption-capable"
      "private keys for address"
      "'${_target_address}' in GNUPG home"
      "'${_gnupg_private}'."
    )
    _msg_info \
      "${_msg[*]}"
  fi
}

_key_private_new() {
  local \
    _user_name="${1}" \
    _full_name="${2}" \
    _comment \
    _evm_gpg_opts=()
  _comment="Ur"
  if [[ "${_user_name}" == "" ]]; then
    _msg=(
      "No username specified for"
      "private key creation."
      "Re-run the program with option"
      "-U <user_name>."
    )
    _msg_error \
      "${_msg[*]}" \
      1
  fi
  if [[ "${_full_name}" == "" ]]; then
    _msg=(
      "No full name specified for"
      "private key creation."
      "Re-run the program with option"
      "-U <user_name>."
    )
    _msg_error \
      "${_msg[*]}" \
      1
  fi
  if [[ "${quiet}" == "n" ]]; then
    _evm_gpg_opts+=(
      -v
    )
  fi
  _evm_gpg_opts+=(
    -C
      "${_comment}"
    -H
      "${_gnupg_private}"
  )
  evm-gpg \
    "${_evm_gpg_opts[@]}" \
    new \
      "${_user_name}" \
      "${_full_name}"
}

_keys_public_check() {
  local \
    _gnupg_home="${1}" \
    _user_name="${2}" \
    _key_fingerprint="${3}" \
    _gpg_opts=() \
    _available \
    _email \
    _msg=() \
    _target
  _key_published="n"
  if [[ "${_email}" == "" && \
        "${_key_fingerprint}" == "" ]]; then
    _user_name="*"
    _msg=(
      "no username or fingerprint"
      "selected, if any"
      "key has already been published"
      "no new one will."
      "If you want to publish a new"
      "key for an existing username"
      "use 'evm-openpgp-key-publish'"
      "directly."
    )
    _msg_warning \
      "${_msg[*]}"
  fi
  _email="${_user_name}@${_target_address}"
  _target="${_email}"
  if [[ "${_key_fingerprint}" != "" ]]; then
    _target="${_key_fingerprint}"
  fi
  _gpg_opts+=(
    --homedir
      "${_gnupg_home}"
    --list-keys
    --with-colons
  )
  _available="$( \
    gpg \
      "${_gpg_opts[@]}" \
      "${_target}" | \
      grep \
        "^pub" || \
      true)"
  if [[ "${_available}" != "" ]]; then
    _msg=(
      "Key for id '${_target}'"
      "already published."
      "If you want to upload a new"
      "one use 'evm-openpgp-key-publish'."
    )
    _msg_info \
      "${_msg[*]}"
    _key_published="y"
  fi
}

_key_publish_check() {
  local \
    _target_address="${1}" \
    _user_name="${2}" \
    _key_fingerprint="${3}" \
    _full_name="${4}" \
    _gnupg_home="${5}" \
    _gnupg_private="${6}" \
    _keys_private
  if [[ "${_key_publish}" == "y" ]]; then
    _keys_public_check \
      "${_user_name}@${_target_address}" \
      "${_key_fingerprint}"
    if [[ "${_key_published}" == "n" ]]; then
      _keys_private_check \
        "${_user_name}"
      if [[ "${_keys_private}" == "n" ]]; then
        _key_private_new \
          "${_user_name}" \
          "${_full_name}"
      fi
    fi
  fi
}

_key_public_publish() {
  local \
    _evm_openpgp_key_publish_opts=() \
    _gpg_opts=() \
    _email \
    _target_key
  if [[ "${quiet}" == "n" ]]; then
    _evm_openpgp_key_publish_opts+=(
      -v
    )
  fi
  _gpg_opts+=(
    --homedir
      "${_gnupg_private}"
    --export
    --armor
  )
  _evm_openpgp_key_publish_opts+=(
    -N
      "${_wallet_name}"
    -w
      "${_wallet_path}"
    -s
      "${_wallet_seed}"
    -n
      "${_target_network}"
    -k
      "${_api_key}"
    -H
      "${_gnupg_private}"
  )
  if [[ "${_key_fingerprint}" != "" ]]; then
    _evm_openpgp_key_publish_opts+=(
      -t
        "fingerprint"
    )
    _target_key="${_key_fingerprint}"
  else
    _evm_openpgp_key_publish_opts+=(
      -t
        "file"
    )
    _email="${_user_name}@${_target_address}"
    _target_key="${_work_dir}/${_email}.asc"
    gpg \
      "${_gpg_opts[@]}" > \
      "${_target_key}"
  fi
  evm-openpgp-key-publish \
    "${_evm_openpgp_key_publish_opts[@]}" \
    "${_target_key}"
}

_publisher_list() {
  local \
    _check_call_opts=() \
    _publish_call_opts=() \
    _publisher_id \
    _enrolling_fee
  _publisher_list_call_opts_setup
  _publisher_id="$( \
    evm-contract-call \
      "${_check_call_opts[@]}" \
      "${_up_address}" \
      "readPublisherNo" \
      "${_target_address}")"
  if [[ "${_publisher_id}" != "0" ]]; then
    _msg=(
      "Address '${_target_address}'"
      "already registered as a publisher."
    )
    _msg_warning \
      "${_msg[*]}"
  elif [[ "${_publisher_id}" == "0" ]]; then
    _enrolling_fee="$( \
      evm-contract-call \
        "${_check_call_opts[@]}" \
        "${_up_address}" \
        "enrollingFee")"
    _msg=(
      "Registering address"
      "'${_target_address}'"
      "as a User Repository"
      "publisher with enrolling fee"
      "'${_enrolling_fee}'."
    )
    _publish_call_opts+=(
      -V
        "${_enrolling_fee}"
      -m
        "wei"
    )
    _msg_info \
      "${_msg[*]}"
    evm-contract-call \
      "${_publish_call_opts[@]}" \
      "${_up_address}" \
      "listPackager" \
      "${_target_address}"
  fi
}

_publisher_register() {
  local \
    _target_network="${1}" \
    _up_address="${2}" \
    _up_abi="${3}" \
    _up_bytecode="${4}" \
    _up_compiler_output="${5}" \
    _work_dir="${6}" \
    _gnupg_home="${7}" \
    _gnupg_private="${8}" \
    _key_publish="${9}" \
    _user_name="${10}" \
    _key_fingerprint="${11}" \
    _full_name="${12}" \
    _target_address="${13}" \
    _key_published \
    _key_fingerprint \
    _msg=()
  _msg=(
    "Registering publisher"
    "'${_target_address}'."
  )
  _msg_info \
    "${_msg[*]}"
  _publishers_update \
    "${_target_network}" \
    "${_up_address}" \
    "${_up_abi}" \
    "${_up_bytecode}" \
    "${_up_compiler_output}" \
    "${_work_dir}" \
    "${_gnupg_home}" \
    "${_keys_update}"
  _key_publish_check \
    "${_target_address}" \
    "${_user_name}" \
    "${_key_fingerprint}" \
    "${_full_name}" \
    "${_gnupg_home}" \
    "${_gnupg_private}"
  _publisher_list
  if [[ "${_key_published}" == "n" ]]; then
    _key_public_publish
  fi
}

_ur_publishers() {
  local \
    _up_address="${1}" \
    _up_version="${2}" \
    _deployments_dir="${3}" \
    _wallet_name="${4}" \
    _wallet_path="${5}" \
    _wallet_password="${6}" \
    _wallet_seed="${7}" \
    _target_network="${8}" \
    _api_key_path="${9}" \
    _cache_dir="${10}" \
    _gnupg_home="${11}" \
    _gnupg_private="${12}" \
    _key_publish="${13}" \
    _keys_update="${14}" \
    _user_name="${15}" \
    _key_fingerprint="${16}" \
    _full_name="${17}" \
    _target_command="${18}" \
    _target_key="${19}" \
    _target_value="${20}" \
    _command_args=() \
    _cmd \
    _args=() \
    _msg=() \
    _wallet_address \
    _target_address \
    _up_abi \
    _up_bytecode \
    _up_compiler_output
  shift \
    20
  _command_args+=(
    "$@"
  )
  _wallet_address="$( \
    evm-wallet \
     get \
       "${_wallet_name}" \
       "address")"
  _contract_artifacts_auto_detect \
    "${_deployments_dir}" \
    "${_target_network}" \
    "UserRepositoryPublishers" \
    "_up" \
    "${_up_version}"
  if [[ "${_target_command}" == "update" ]]; then
    _publishers_update \
      "${_target_network}" \
      "${_up_address}" \
      "${_up_abi}" \
      "${_up_bytecode}" \
      "${_up_compiler_output}" \
      "${_cache_dir}" \
      "${_gnupg_home}" \
      "${_keys_update}"
  elif [[ "${_target_command}" == "list" ]]; then
    _target_address="${_target_key}"
    _publishers_list \
      "${_cache_dir}" \
      "${_gnupg_home}" \
      "${_target_address}"
  elif [[ "${_target_command}" == "register" ]]; then
    _target_address="${_target_key}"
    if [[ "${_target_address}" == "" ]]; then
      _msg=(
        "No target address specified,"
        "setting own address '${_wallet_address}'."
      )
      _msg_warning \
        "${_msg[*]}"
      _target_address="${_wallet_address}"
    fi
    if [[ "${_target_address}" != \
          "${_wallet_address}" && \
          "${_key_publish}" == "y" ]]; then
      _msg=(
        "Registering third-party"
        "publisher '${_target_address}',"
        "disabling 'key publishing' option."
        "To publish applications the publisher"
        "will then have to publish his/her key"
        "using 'evm-openpgp-key-publish' separately."
      )
      _msg_warning \
        "${_msg[*]}"
      _key_publish="n"
    fi
    _publisher_register \
      "${_target_network}" \
      "${_up_address}" \
      "${_up_abi}" \
      "${_up_bytecode}" \
      "${_up_compiler_output}" \
      "${_cache_dir}" \
      "${_gnupg_home}" \
      "${_gnupg_private}" \
      "${_key_publish}" \
      "${_user_name}" \
      "${_key_fingerprint}" \
      "${_full_name}" \
      "${_target_address}"
  else
    _msg_error \
      "unknown command '${_target_command}'"
  fi
}

_set_overrides() {
  local \
    _key_publish
  if [[ -v override_quiet ]]; then
    quiet="${override_quiet}"
  elif [[ -z "${quiet}" ]]; then
    quiet="y"
  fi
  if [[ -v override_color ]]; then
    color="${override_color}"
  elif [[ -z "${color}" ]]; then
    color="n"
  fi
  _set_override \
    "call" \
    "date" \
    "$(_get_date_human)"
  _set_override \
    "wallet" \
    "name" \
    "default"
  _set_override \
    "user" \
    "level" \
    "n"
  _deployments_dir_auto_detect \
    "ur" \
    "${user_level}"
  _network_auto_detect \
    "UserRepositoryPublishers" \
    "${deployments_dir}" \
    "${user_level}"
  _api_key_auto_detect \
    "${target_network}"
  _wallet_overrides_set \
    "evm-wallet" \
    "${wallet_name}" \
    "y"
  _set_override \
    "cache" \
    "dir" \
    "$(_cache_dir_auto_detect)"
  _set_override \
    "gnupg" \
    "home" \
    "$(_get \
         "cache" \
         "dir")/gnupg"
  _set_override \
    "gnupg" \
    "private" \
    "$(_conf_dir_auto_detect)/gnupg"
  _contract_setup_auto_detect \
    "ur" \
    "UserRepositoryPublishers" \
    "up" \
    "${target_network}" \
    "${user_level}" \
    "${deployments_dir}"
  _set_override \
    "target" \
    "command" \
    "list"
  _key_publish="n"
  if [[ "${target_command}" == "register" ]]; then
    _key_publish="y"
  fi
  _set_override \
    "key" \
    "publish" \
    "${_key_publish}"
  _set_override \
    "user" \
    "name" \
    ""
  _set_override \
    "full" \
    "name" \
    ""
  _set_override \
    "key" \
    "fingerprint" \
    ""
  _set_override \
    "keys" \
    "update" \
    "y"
}

# Show help usage, with an exit status.
# $1: exit status number.
_usage() {
  local \
    _up \
    _up_deployment \
    _networks \
    _usage_text
  _up="UserRepositoryPublishers"
  _up_deployment="${deployments_dir}/${_up}"
  _networks=( $( \
    evm-contract-deployment-networks \
      -A \
      "${_up_deployment}")
  )
  IFS='' \
    read \
      -r \
      -d '' \
      _usage_text << \
        ENDUSAGETEXT || true

Ur Publishers management

Usage:
  ${app_name}
    [options]
    <command>
    <key>
    <value>

  commands:
    list
    register
      <target_address>
    update

  networks:
$(_display_networks \
     "${_networks[@]}")

  options:
     -y <y/n>               Whether to update publishers' keys.
                            Default: ${keys_update}
     -P <y/n>               Whether to publish key.
                            Default: ${key_publish}

  publish key options:
     -U <user_name>         Publisher's key username.
                            Default: ${user_name}
     -F <full_name>         Publisher's key full name.
                            Default: ${full_name}
     -f <key_fingerprint>   Publisher's key fingerprint.
                            Default: ${key_fingerprint}

  contract options:
     -A <up_address>        Address of the 'User Repository
                            Publishers' contract on the
                            network.
                            Default: ${up_address}
     -V <up_version>        Version of the target 'User Repository
                            Publishers' contract.
                            Default: ${up_version}

  libevm options:
     -u                     Whether to retrieve publishers' contract
                            address from user directory or custom
                            deployment.
                            Default: ${user_level}
     -d <deployments_dir>   Contracts deployments directory.
                            Default: ${deployments_dir}

  credentials options:
     -N <wallet_name>       Wallet name.
                            Default: ${wallet_name}
     -w <wallet_path>       Wallet path.
                            Default: ${wallet_path}
     -p <wallet_password>   Wallet password.
                            Default: ${wallet_password}
     -s <wallet_seed>       Wallet seed path.
                            Default: ${wallet_seed}
     -n <network>           EVM network name (${_networks[*]}).
                            Default: ${target_network}
     -k <api_key>           Etherscan-like service key.
                            Default: ${api_key}

  app options:
     -C <cache_dir>         Work directory.
                            Default: ${cache_dir}
     -H <gnupg_home>        GNUPG home directory.
                            Default: ${gnupg_home}
     -G <gnupg_private>     GNUPG private home directory.
                            Default: ${gnupg_private}

     -h                     This message.
     -c                     Enable color output
     -v                     Enable verbose output
ENDUSAGETEXT
  _printf \
    '%s\n' \
    "${_usage_text}"
  exit \
    "${1}"
}

_display_flags() {
  local \
    _flag \
    _flags=(
      "${1}"
    )
  for _flag \
    in "${_flags[@]}"; do
  _msg_info \
    "                             ${_flag}"
  done
}

# Shows configuration options.
_show_config() {
  _msg_info "${app_name} configuration"
  _msg_info "                Call date:   ${call_date}"
  _msg_info "       Publishers address:   ${up_address}"
  _msg_info "       Publishers version:   ${up_version}"
  _msg_info "               User level:   ${user_level}"
  _msg_info "    Deployments directory:   ${deployments_dir}"
  _msg_info "           Wallet address:   ${wallet_address}"
  _msg_info "              Wallet name:   ${wallet_name}"
  _msg_info "              Wallet path:   ${wallet_path}"
  _msg_info "          Wallet password:   ${wallet_password}"
  _msg_info "              Wallet seed:   ${wallet_seed}"
  _msg_info "           Target network:   ${target_network}"
  _msg_info "                  API key:   ${api_key}"
  _msg_info "          Cache directory:   ${cache_dir}"
  _msg_info "          GNUPG directory:   ${gnupg_home}"
  _msg_info "  GNUPG private directory:   ${gnupg_private}"
  _msg_info "  Publishers' keys update:   ${keys_update}"
  _msg_info "              Publish key:   ${key_publish}"
  _msg_info "             Key username:   ${user_name}"
  _msg_info "          Key fingerprint:   ${key_fingerprint}"
  _msg_info "            Key full name:   ${full_name}"
  _msg_info "           Target command:   ${target_command}"
  _msg_info "               Target key:   ${target_key}"
  _msg_info "             Target value:   ${target_value}"
}

_globals
_global_variables
_requirements
# shellcheck disable=SC2034
while \
  getopts \
    'A:V:ud:N:w:p:s:n:k:C:H:G:y:P:U:f:F:cvh?' \
    arg; do
  case \
    "${arg}" in
    A) override_up_address="${OPTARG}" ;;
    V) override_up_version="${OPTARG}" ;;
    u) override_user_level="y" ;;
    d) override_deployments_dir="${OPTARG}" ;;
    N) override_wallet_name="${OPTARG}" ;;
    w) override_wallet_path="${OPTARG}" ;;
    p) override_wallet_password="${OPTARG}" ;;
    s) override_wallet_seed="${OPTARG}" ;;
    n) override_target_network="${OPTARG}" ;;
    k) override_api_key="${OPTARG}" ;;
    C) override_cache_dir="${OPTARG}" ;;
    H) override_gnupg_home="${OPTARG}" ;;
    G) override_gnupg_private="${OPTARG}" ;;
    y) override_keys_update="${OPTARG}" ;;
    P) override_key_publish="${OPTARG}" ;;
    U) override_user_name="${OPTARG}" ;;
    f) override_key_fingerprint="${OPTARG}" ;;
    F) override_full_name="${OPTARG}" ;;
    c) override_color="y" ;;
    v) override_quiet="n" ;;
    h|?) _set_overrides && \
         _usage \
           0 ;;
    *)
    _msg_error \
      "Invalid argument '${arg}'" \
      0
    _usage \
      1
    ;;
  esac
done
shift \
  $(( \
    OPTIND - 1 \
  ))
if (( $# < 1 )); then
  _msg_error \
    "no command given" \
    0
  _set_overrides
  _usage \
    1
fi
if (( 0 < $# )); then
  _set \
    "target" \
    "command" \
    "${1}"
fi
if (( 1 < $# )); then
  _set \
    "target" \
    "key" \
    "${2}"
fi
if (( 2 < $# )); then
  _set \
    "target" \
    "value" \
    "${3}"
fi
shift \
  3 || \
  true
command_args+=(
  "$@"
)
_set_overrides
_show_config
app_opts=(
  "${up_address}"
  "${up_version}"
  "${deployments_dir}"
  "${wallet_name}"
  "${wallet_path}"
  "${wallet_password}"
  "${wallet_seed}"
  "${target_network}"
  "${api_key}"
  "${cache_dir}"
  "${gnupg_home}"
  "${gnupg_private}"
  "${key_publish}"
  "${keys_update}"
  "${user_name}"
  "${key_fingerprint}"
  "${full_name}"
  "${target_command}"
  "${target_key}"
  "${target_value}"
)
_ur_publishers \
  "${app_opts[@]}"

